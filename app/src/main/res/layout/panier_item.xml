<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPanier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="39dp">

            <ImageView
                android:id="@+id/panierImg"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/slider_image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/namePanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/panierImg"
                android:text="CAM"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/marquepanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="31dp"
                android:layout_toEndOf="@+id/panierImg"
                android:text="Marque"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/prix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@+id/panierImg"
                android:text=" Prix "
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/prixpanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="157dp"
                android:layout_marginTop="60dp"
                android:text="prix" />

            <Button
                android:id="@+id/supppanier"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="118dp"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="56dp"
                android:background="@drawable/delet"
                android:shadowRadius="@android:integer/config_longAnimTime" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>