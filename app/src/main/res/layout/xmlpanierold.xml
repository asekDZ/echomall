<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanierActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:adjustViewBounds="true"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/panierImg"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/slider_image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/namePanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/panierImg"
                android:text="CAM"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="34dp"
                android:layout_toEndOf="@+id/panierImg"
                android:text="QUANTITE : 5"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@+id/panierImg"
                android:text=" Prix : $50.20"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/button3"
                android:layout_width="68dp"
                android:layout_height="102dp"
                android:layout_alignTop="@+id/namePanier"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/delet"
                android:shadowRadius="@android:integer/config_longAnimTime" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/book_img_id2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/phoneecom"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/book_img_id2"
                android:text="CAM"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="34dp"
                android:layout_toEndOf="@+id/book_img_id2"
                android:text="QUANTITE : 5"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@+id/book_img_id2"
                android:text=" Prix : $50.20"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/button2"
                android:layout_width="68dp"
                android:layout_height="102dp"
                android:layout_alignTop="@+id/name2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/delet"
                android:shadowRadius="@android:integer/config_longAnimTime" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/book_img_id1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/watch"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/book_img_id1"
                android:text="CAM"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="34dp"
                android:layout_toEndOf="@+id/book_img_id1"
                android:text="QUANTITE : 5"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@+id/book_img_id1"
                android:text=" Prix : $50.20"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/button1"
                android:layout_width="68dp"
                android:layout_height="102dp"
                android:layout_alignTop="@+id/name1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/delet"
                android:shadowRadius="@android:integer/config_longAnimTime" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">


            <Button
                android:id="@+id/button4"
                android:layout_width="126dp"
                android:layout_height="62dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/colorPrimary"
                android:text="Prix Total" />


            <TextView
                android:id="@+id/prix"
                android:layout_width="100dp"
                android:layout_height="60dp"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/bordertxtv"
                android:padding="19dp"
                android:text="$ 150.26"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </RelativeLayout>



    </LinearLayout>











</android.support.constraint.ConstraintLayout>